#include<stdio.h>
#include<conio.h>
void main()
{
    int i,num,fact=1;
    float series=0,result;
    
    for(num=1;num<=7;num++)
    {

    for(i=num,fact=1;i>0;i--)
    {
        fact=fact*i;
        
    }
    result=num/fact;
    series=result+series;
    printf("Fact of %d = %d Result= %f series= %f\n",num,fact,result,series);
    }
}


