#include<stdio.h>
#include<conio.h>
void main()
{
    int year;
    printf("Year please?\n");
    scanf("%d",&year);

    year%4==0 && year%100!=0 ? printf("Leap year") : (year%400==0 ? printf("Leap year 400") : printf("Not a leap year"));
}


